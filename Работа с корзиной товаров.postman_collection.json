	"item": [
		{
			"name": "1.Добавление определенного параметром товара в корзину",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//проверка статуса ответа\r",
							"pm.test(\"Status code is  200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Наличие не пустого ответа\", function () {\r",
							"    pm.expect(pm.response.text()).not.null\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const jar = pm.cookies.jar();\r",
							"jar.set(\"sibdar-spb.ru\", { name:\"PHPSESSID\", value:\"Gi0ttAC2D3sM8udT8TVPd2CmTa0sk6gU\",  httpOnly : true }, (error, cookie) => {\r",
							"  if (error) {\r",
							"    console.error(`An error occurred: ${error}`);\r",
							"  } else {\r",
							"    console.log(`Cookie saved: ${cookie}`);\r",
							"  }\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableCookies": true,
				"disabledSystemHeaders": {}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Set-Cookie",
						"value": "PHPSESSID=s6vEE2UEfZq1t4glabGu1myRX0hJWrAX; domain=sibdar-spb.ru; HttpOnly",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"idCookie\": \"733053\",\r\n    \"idProd\": \"178\",\r\n    \"type\": \"add\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "{{URL}}/basketOrder.php"
			},
			"response": []
		},
